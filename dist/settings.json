  "vim.easymotionDimBackground": false,
  "vim.autoindent": false,
  "vim.easymotion": true,
  // "vim.foldfix": true,
  "vim.enableNeovim": false,
  "vim.ignorecase": true,

  "vim.timeout": 300,
  "vim.history": 15,
  "vim.mouseSelectionGoesIntoVisualMode": true,
  "vim.overrideCopy": true,
  "vim.camelCaseMotion.enable": true,

  "vim.leader": "<Space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "e"],
      "after": ["<leader>", "<leader>", "f"],
      "silent": true
    },
    {
      "before": ["<leader>", "b"],
      "after": ["<leader>", "<leader>", "F"],
      "silent": true
    },
    // Add multi cursors
    {
      "before": ["<leader>", "c"],
      "after": ["2", "g", "b"],
      "silent": true
    },

    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.moveEditorToBelowGroup"],
      "silent": true
    },
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.moveEditorToLeftGroup"],
      "silent": true
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.moveEditorToRightGroup"],
      "silent": true
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.moveEditorToAboveGroup"],
      "silent": true
    },

    {
      "before": ["leader", "s"],
      "commands": [":w", "workbench.action.keepEditor"],
      "silent": true
    },
    {
      "before": ["leader", "a"],
      "commands": [":wa"],
      "silent": true
    },
    {
      "before": ["leader", "q"],
      "commands": ["workbench.action.closeOtherEditors"],
      "silent": true
    },
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.closeActiveEditor"],
      "silent": true
    },
    {
      "before": ["leader", "g"],
      "commands": ["workbench.action.closeGroup"],
      "silent": true
    },
    {
      "before": ["leader", "r"],
      "commands": ["workbench.action.closeEditorsToTheRight"],
      "silent": true
    },
    {
      "before": ["leader", "t"],
      "commands": ["workbench.action.reopenClosedEditor"],
      "silent": true
    },
    { "before": ["/"], "commands": ["actions.find"], "silent": true },
    {
      "before": ["?"],
      "commands": ["editor.action.startFindReplaceAction"],
      "silent": true
    },
    {
      "before": ["leader", "/"],
      "commands": ["workbench.action.findInFiles"],
      "silent": true
    },
    {
      "before": ["leader", "?"],
      "commands": ["workbench.action.replaceInFiles"],
      "silent": true
    },
    {
      "before": ["leader", "f"],
      "commands": ["editor.action.formatDocument", "eslint.executeAutofix"],
      "silent": true
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"],
      "silent": true
    },
    {
      "before": ["g", "r"],
      "commands": ["references-view.findReferences"],
      "silent": true
    },
    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },
    {
      "before": ["n"],
      "after": ["n", "z", "z", "z", "v"]
    },
    {
      "before": ["N"],
      "after": ["N", "z", "z", "z", "v"]
    },
    {
      "before": ["leader", "m"],
      "after": ["@", "@"]
    },
    { "before": ["P"], "after": ["\"", "0", "p"] },
    { "before": ["<leader>", "p"], "after": ["\"", "+", "p"] },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    },
    {
      "before": ["C"],
      "after": ["c", "$"]
    },
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "c"],
      "after": ["g", "b"],
      "silent": true
    },

    { "before": ["/"], "commands": ["actions.find"], "silent": true },
    {
