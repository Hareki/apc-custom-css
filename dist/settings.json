{
  /* -------------------------------------------------------------------------- */
  /*                               FUNCTIONALITY                                */
  /* -------------------------------------------------------------------------- */

  /* ------------------------------ Sticky scroll ----------------------------- */
  "editor.stickyScroll.enabled": true,
  "workbench.tree.enableStickyScroll": true,
  "terminal.integrated.stickyScroll.enabled": true,

  /* --------------------------------- Preview -------------------------------- */
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "editor.suggest.preview": true,

  /* ------------------------------- Suggestions ------------------------------ */
  "editor.snippetSuggestions": "inline",
  "editor.quickSuggestions": {
    "other": "on",
    "strings": "off",
    "comments": "off"
  },
  "editor.quickSuggestionsDelay": 50,

  "editor.tabCompletion": "on",
  "editor.inlineSuggest.showToolbar": "always",
  "editor.inlineSuggest.enabled": true,

  /* --------------------- File exclusion for performance --------------------- */

  // https://medium.com/@krtirtho/make-visual-studio-code-less-ram-consuming-faster-90db8c76a187
  "files.exclude": {
    "**/yarn.lock/**": true,
    "**/package-lock.json": true
    // "**/node_modules/**": true
  },

  "json.schemas": [
    {
      "exclude": ["node_modules"]
    }
  ],

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true
    // "**/env": true,
    // "**/venv": true
  },

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
    // "**/env/**": true,
    // "**/venv/**": true,
    // "env-*": true
  },

  /* -------------------------------- Explorer -------------------------------- */
  "explorer.compactFolders": false,
  "explorer.copyRelativePathSeparator": "/",

  "workbench.startupEditor": "none",
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.expandMode": "doubleClick",

  "explorer.confirmDragAndDrop": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  /* --------------------------------- Update --------------------------------- */
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "update.mode": "start",
  "update.showReleaseNotes": true,

  /* -------------------------------------------------------------------------- */
  /*                                 APPEARANCE                                 */
  /* -------------------------------------------------------------------------- */
  "apc.imports": [
    "/C:/Users/minht/OneDrive/Cloud Storage/Settings/VSCode/dist/custom.minified.css",
    "/Users/Hareki/Library/CloudStorage/OneDrive-Personal/Cloud Storage/Settings/VSCode/dist/custom.minified.css"
  ],

  /* ------------------------------ Activity bar ------------------------------ */
  "workbench.activityBar.location": "top",

  /* -------------------------------- Title bar -------------------------------- */
  "window.titleBarStyle": "custom",
  "window.title": "${dirty}Hareki's Secret Lab",
  "window.titleSeparator": " | ",
  "window.customTitleBarVisibility": "windowed",

  /* -------------------------------- Menu bar -------------------------------- */
  "window.customMenuBarAltFocus": false,
  "window.menuBarVisibility": "hidden",

  /* ------------------------------- Status bar ------------------------------- */
  "apc.statusBar": {
    // "position": "editor-bottom",
    "height": 35,
    "fontSize": 14
  },

  /* -------------------------------- List row -------------------------------- */
  "apc.listRow": {
    "lists": [
      "customview-tree",
      "results",
      "open-editors",
      "explorer-folders-view",
      "outline-tree",
      "scm-view",
      "debug-view-content",
      "debug-breakpoints",
      "tree",
      "quick-input-list"
    ],
    "height": 30
  },

  /* ---------------------------------- Font ---------------------------------- */
  "editor.fontLigatures": "'calt' on, 'liga' on, 'zero' off, 'ss02' off",
  "editor.fontSize": 13.6,
  "editor.fontWeight": 500,
  "editor.fontFamily": "'JetBrainsMono Nerd Font', Consolas, 'Courier New', monospace",

  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.fontSize": 15,

  "apc.font.family": "JetBrainsMono Nerd Font",

  "editor.lineHeight": 25,
  "window.zoomLevel": 1.3,

  /* ---------------------------------- Theme --------------------------------- */
  "workbench.iconTheme": "bearded-icons",
  // "symbols.hidesExplorerArrows": false,
  "oneDarkPro.editorTheme": "One Dark Pro",
  "workbench.colorTheme": "One Dark Pro Darker",
  "oneDarkPro.italic": true,

  "workbench.colorCustomizations": {
    "menu.background": "#282c34",
    "quickInput.background": "#282c34",

    "editorCursor.foreground": "#61afef",
    "editorCursor.background": "#fff",

    // One Dark Pro error color
    "errorLens.errorForeground": "#f44747",
    // Remove the transparent background
    "errorLens.errorMessageBackground": "#3f353f",

    "errorLens.infoMessageBackground": "#283f4d",
    "errorLens.warningMessageBackground": "#423b3b",

    "[One Dark Pro Darker]": {
      "quickInputList.focusBackground": "#39404c",
      "editorStickyScroll.background": "#272b32",
      "terminalStickyScroll.background": "#272b32",
      // "editorStickyScroll.background": "#1e2227",
      "editorStickyScrollHover.background": "#474f5e",

      "editor.background": "#1e2227",
      "sideBar.background": "#1e2227",

      "sideBar.border": "#373d48",
      "statusBar.border": "#373d48",
      "titleBar.border": "#373d48",
      "statusBar.background": "#23272e",
      "titleBar.activeBackground": "#23272e",
      "editor.findMatchBackground": "#42557b1a",
      "editorGroup.border": "#373d48",
      "terminal.background": "#1b1f23"

      // "editorError.foreground": "#00000000",
      // "editorWarning.foreground": "#00000000",
      // "editorInfo.foreground": "#00000000",
    }
  },

  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "textMateRules": []
  },

  "editor.mouseWheelScrollSensitivity": 2.5,
  "workbench.list.mouseWheelScrollSensitivity": 2.5,

  /* --------------------------------- Minimap -------------------------------- */
  "editor.minimap.side": "left",
  "editor.minimap.scale": 1,
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.maxColumn": 100,
  "editor.minimap.renderCharacters": false,

  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,

  /* -------------------------------- Terminal -------------------------------- */
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.title": "${cwdFolder}",
  "terminal.integrated.tabs.description": "",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.gpuAcceleration": "auto",
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.mouseWheelScrollSensitivity": 2.5,
  "terminal.integrated.tabs.enabled": false,

  /* ---------------------------------- Tabs ---------------------------------- */
  "workbench.editor.untitled.labelFormat": "name",
  "workbench.editor.customLabels.patterns": {
    "**/src/**/index.{ts,tsx,js,jsx}": "[I] | ${dirname}.${extname}"
  },
  "workbench.editor.labelFormat": "default",
  "breadcrumbs.enabled": true,

  /* ------------------------------ Bracket pairs ----------------------------- */
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": false,

  /* -------------------------------------------------------------------------- */
  /*                                 EXTENSIONS                                 */
  /* -------------------------------------------------------------------------- */

  "extensions.experimental.affinity": {
    "vscodevim.vim": 1

    // "vscode.typescript-language-features": 2,
    // "dbaeumer.vscode-eslint": 2

    // "vscode.git": 2
    // "bradlc.vscode-tailwindcss": 2,
    // "eamodio.gitlens": 2,
    // "GitHub.copilot": 4
    // "streetsidesoftware.code-spell-checker": 6
  },

  /* ------------------------- Copilot Configurations ------------------------- */
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": false
  },

  /* -------------------------------- Formatter ------------------------------- */
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  // "editor.formatOnSaveMode": "modificationsIfAvailable",

  // Use plugin:tailwindcss/recommended in eslint config instead
  "tailwindCSS.validate": false,

  "eslint.codeActionsOnSave.mode": "all",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // "eslint.validate": ["javascript"],

  "prettier.trailingComma": "all",
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "html.format.wrapLineLength": 100,
  "html.format.wrapAttributes": "force-aligned",

  /* ------------------------------ Color preview ----------------------------- */
